extends layout

block content
  h1 Gestión de Reservas

  if habitaciones.length > 0
    h2 Habitaciones Disponibles
    table
      thead
        tr
          th ID Habitación
          th Tipo de Habitación
          th Precio por Día
      tbody
        each habitacion in habitaciones
          tr
            td= habitacion.id_hospedaje
            td= habitacion.tipo_habitacion
            td= habitacion.precio_dia

    h2 Realizar una Reserva
    form(action="/reservas" method="POST")
      label(for="id_cliente") ID del Cliente:
      input(type="number" name="id_cliente" required)
      br
      label(for="id_habitacion") ID de la Habitación:
      input(type="number" name="id_habitacion" required)
      br
      label(for="fecha_inicio") Fecha de Inicio:
      input(type="date" name="fecha_inicio" required)
      br
      label(for="fecha_fin") Fecha de Fin:
      input(type="date" name="fecha_fin" required)
      br
      button(type="submit") Reservar
  else
    p No hay habitaciones disponibles en este momento.
