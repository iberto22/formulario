doctype html
html
  head
    title Registrar Usuario
    link(rel="stylesheet", href="/css/styles.css")
  body
    h1 Registrar Usuario
    form(action="/clientes/registrar" method="POST")
      label(for="nombre_cliente") Nombre Completo:
      input(type="text" name="nombre_cliente" required)
      label(for="email_cliente") Email:
      input(type="email" name="email_cliente" required)
      button(type="submit") Registrar
