extends layout

block content
  h1 Iniciar Sesión
  form(action="/usuarios/login" method="POST")
    label(for="email_cliente") Email:
    input(type="email" name="email_cliente" required)
    br
    label(for="nombre_cliente") Nombre:
    input(type="text" name="nombre_cliente" required)
    br
    button(type="submit") Iniciar Sesión
